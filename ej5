class Pago:
    def __init__(self, monto):
        self.monto = monto

    def procesarPago(self):
        pass  # Método "virtual", las clases hijas lo implementan a su manera


class TarjetaCredito(Pago):
    def __init__(self, monto, numero_tarjeta):
        super().__init__(monto)
        self.numero_tarjeta = numero_tarjeta

    def procesarPago(self):
        print(f"Procesando pago de ${self.monto} con tarjeta de crédito {self.numero_tarjeta[-4:]}...")


class PayPal(Pago):
    def __init__(self, monto, correo):
        super().__init__(monto)
        self.correo = correo

    def procesarPago(self):
        print(f"Procesando pago de ${self.monto} mediante PayPal (cuenta: {self.correo})...")
